{
  "name": "@gloxy/logger",
  "type": "module",
  "version": "2.2.2",
  "description": "A debug.js based namespaced logging utility with predefined log types(debug, info, warn, error) and supporting title-scoped logging, available in both web browsers and Node.js.",
  "author": {
    "name": "GloryWong",
    "email": "glorywong1001@gmail.com",
    "url": "https://glorywong.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/GloryWong/logger#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GloryWong/logger.git"
  },
  "bugs": {
    "url": "https://github.com/GloryWong/logger/issues"
  },
  "keywords": [
    "log",
    "logger",
    "print",
    "debug",
    "level",
    "trace",
    "module",
    "typescript",
    "javascript",
    "node",
    "browser"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.20.4"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "prepublishOnly": "pnpm test && pnpm build",
    "test": "vitest run",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "prepare": "pnpm simple-git-hooks"
  },
  "dependencies": {
    "@types/debug": "^4.1.12",
    "debug": "^4.3.6",
    "detect-node-es": "^1.1.0",
    "supports-color": "^9.4.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.24.1",
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^20.14.14",
    "eslint": "^9.8.0",
    "lint-staged": "^15.2.8",
    "perfectionist": "^2.4.0",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "lint-staged": {
    "*": "pnpm lint:fix"
  }
}
